<!DOCTYPE html>
<html lang="ja">
  <head>
    <%- include("../_share/metadata.ejs") %>
    <title>Document</title>
    <%- include("../_share/stylesheets.ejs") %>
  </head>

  <body>
    <div class="outerframe">
      <%- include("../_share/navbar.ejs") %>
      <main role="main" class="container">
        <div class="border-bottom mt-5 mb-5">
          <h1>新規登録</h1>
        </div>
        <div class="row justify-content-center">
          <form action="/account/register/execute" method="POST" class="col-sm-10 col-lg-8">
            <div class="form-group row">
              <label for="name" class="col-sm-3 col-form-label">ユーザー名</label>
              <div class="col-sm-9">
                <input readonly type="text" class="form-control" id="name" name="name" value="<%= user.name %>" />
              </div>
            </div>
            <div class="form-group row">
              <label for="email" class="col-sm-3 col-form-label">メールアドレス</label>
              <div class="col-sm-9">
                <input readonly type="text" class="form-control" id="email" name="email" value="<%= user.email %>" />
              </div>
            </div>
            <div class="form-group row">
              <label for="password" class="col-sm-3 col-form-label">パスワード</label>
              <div class="col-sm-9">
                <input
                  readonly
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  value="<%= user.password %>"
                />
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-3"></div>
              <div class="col-sm-9">
                <input type="submit" class="btn btn-primary" value="新規登録" />
              </div>
            </div>
          </form>
        </div>
      </main>
      <%- include("../_share/footer.ejs") %>
    </div>
    <%- include("../_share/javascripts.ejs") %>
  </body>
</html>
