<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>検索</title>

    <%- include("../_share/stylesheets.ejs") %>
  </head>
  <body>
    <%- include("../_share/navbar.ejs") %>
    <main class="container">
      <div class="float-right">
        <span class="badge badge-secondly"><%= count %></span>
      </div>
      <form class="form-inline mt-5 mb-5" method="GET" action="/search">
        <input class="form-control" type="text" id="keyword" name="keyword" value="<%= keyword %>" />
        <input class="btn btn-default ml-2" type="submit" value="検索" />
      </form>

      <div class="mt-5 mb-5"><% for (var item of list){ %> <%- include("./item.ejs", item) %> <% } %></div>

      <nav>
        <ul class="pagination">
          <% for (i = 1; i <= pagination.max; i++) { %> <% if(pagination.current !== i) { %>
          <li class="pahe-item">
            <a class="page-link" href="/search/?keyword=<%= keyword %>&page=<%= i %>"><%= i %></a>
          </li>
          <% } else { %>
          <li class="pahe-item active">
            <span class="page-link"><%= i %></span>
          </li>
          <% } %> <% } %>
        </ul>
      </nav>
    </main>
    <%- include("../_share/javascripts.ejs") %>
  </body>
</html>
